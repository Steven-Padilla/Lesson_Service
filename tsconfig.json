{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": ".",
        "noEmit": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/*"
, "src/Lesson/config/config.ts"    ],
    "exclude": [
        "node_modules"
    ]
}